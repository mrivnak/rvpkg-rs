[definition]
name = "neofetch"
version = "7.1.0"
revision = 1
description = "A command-line system information tool written in bash 3.2+"
license = "MIT"
homepage = "https://github.com/dylanaraps/neofetch"
dependencies = ["bash"]
build_dependencies = []
provides = ["neofetch"]
architectures = ["any"]

[build.source."neofetch-7.1.0.tar.gz"]
type = "archive"
url = "https://github.com/dylanaraps/neofetch/archive/refs/tags/7.1.0.tar.gz"
sha256 = "skip"

[build]
build = """
    tar -xf neofetch-7.1.0.tar.gz
"""
install = """
    cd neofetch-7.1.0
    make DESTDIR=$OUTDIR install
    install -Dm644 LICENSE $OUTDIR/usr/share/licenses/neofetch/LICENSE
"""